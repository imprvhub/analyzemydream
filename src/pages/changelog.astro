---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import SimpleFeed from '../components/blocks/feeds/BasicFeed.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'

// Data
import feedData from '../data/json-files/changelogData.json'

// Content
// - SEO
const SEO = {
	title: 'AnalyzeMyDream | Atualizações e Melhorias na Versão',
	description:
		"Fique informado sobre todas as novas atualizações e melhorias no AnalyzeMyDream!"
}

// - Cabeçalho da Página
const header = {
	title: '<strong>Atualizações</strong> e <strong>Melhorias na Versão</strong> do AnalyzeMyDream',
	text: 'Fique informado sobre todas as novas atualizações e melhorias no AnalyzeMyDream'
}

---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<SimpleFeed data={feedData} />
</Layout>
