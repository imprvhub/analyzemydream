---

import Layout from '../layouts/Layout.astro'

import Hero from '../components/blocks/hero/PageHeader.astro'
import SimpleFeed from '../components/blocks/feeds/BasicFeed.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'


import feedData from '../data/json-files/changelogData.json'


const SEO = {
	title: 'AnalyzeMyDream | Atualizações de Versão e Melhorias',
	description:
		"Fique informado sobre todas as novas atualizações e melhorias no AnalyzeMyDream!"
}

const header = {
	title: '<strong>Atualizações de Versão</strong> e <strong>Melhorias</strong>.',
	text: 'Fique informado sobre todas as novas atualizações e melhorias no AnalyzeMyDream.'
}


---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<SimpleFeed data={feedData} />
</Layout>
