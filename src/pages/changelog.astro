---
// Componentes
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import SimpleFeed from '../components/blocks/feeds/BasicFeed.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'

// Datos
import feedData from '../data/json-files/changelogData.json'

// Contenido
// - SEO
const SEO = {
	title: 'AnalyzeMyDream | Actualizaciones de Versión y Mejoras',
	description:
		"¡Mantente informado sobre todas las nuevas actualizaciones y mejoras en AnalyzeMyDream!"
}
// - Page Header
const header = {
	title: '<strong>Actualizaciones de Versión</strong> y <strong>Mejoras</strong>.',
	text: 'Mantente informado sobre todas las nuevas actualizaciones y mejoras en AnalyzeMyDream.'
}

---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<SimpleFeed data={feedData} />
</Layout>
