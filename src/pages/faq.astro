---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import faqData from '../data/json-files/faqData.json'
// - FAQ Categories
const faqDreamAnalysis = faqData.filter((faq) => faq.category === 'dream-analysis')
const faqReferences = faqData.filter((faq) => faq.category === 'references')

// - SEO
const SEO = {
    title: 'AnalyzeMyDream | Frequently Asked Questions',
    description:
        'Find answers to common questions about our platform.'
}
// - Page Header
const header = {
    title: 'Get Answers of <strong>AnalyzeMyDream.com</strong>',
    text: 'Find answers to common questions about our platform.'
}
---

<Layout title={SEO.title} description={SEO.description}>
    <Hero title={header.title} text={header.text} />
    <FAQ
        title="Understanding Our Dream Analysis Tool"
        text="Get all the details on AnalyzeMyDreamâ€™s dream analysis tool. Learn about its features, how it works, and how it can help you gain insights into your dreams."
        data={faqDreamAnalysis}
    />
    <FAQ
        title="Bibliographic Sources and References"
        text="Discover the sources and references that form the foundation of our dream analysis articles. Learn more about the books and studies we use to ensure accurate and reliable interpretations."
        data={faqReferences}
    />
    <CTA />
</Layout>
