---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import faqData from '../data/json-files/faqData.json'
// - FAQ Categories
const faqDreamAnalysis = faqData.filter((faq) => faq.category === 'dream-analysis')
const faqReferences = faqData.filter((faq) => faq.category === 'references')

// - SEO
const SEO = {
    title: 'AnalyzeMyDream | Preguntas Frecuentes',
    description:
        'Encuentra respuestas a las preguntas comunes sobre nuestra plataforma.'
}
// - Page Header
const header = {
    title: 'Obtén Respuestas de <strong>AnalyzeMyDream.com</strong>',
    text: 'Encuentra respuestas a las preguntas comunes sobre nuestra plataforma.'
}
---

<Layout title={SEO.title} description={SEO.description}>
    <Hero title={header.title} text={header.text} />
    <FAQ
        title="Comprendiendo Nuestra Herramienta de Análisis de Sueños"
        text="Obtén todos los detalles sobre la herramienta de análisis de sueños de AnalyzeMyDream. Aprende sobre sus características, cómo funciona y cómo puede ayudarte a obtener información sobre tus sueños."
        data={faqDreamAnalysis}
    />
    <FAQ
        title="Fuentes Bibliográficas y Referencias"
        text="Descubre las fuentes y referencias que forman la base de nuestros artículos de análisis de sueños. Conoce más sobre los libros y estudios que utilizamos para asegurar interpretaciones precisas y fiables."
        data={faqReferences}
    />
    <CTA />
</Layout>
