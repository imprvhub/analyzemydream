---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import faqData from '../data/json-files/faqData.json'
// - FAQ Categories
const faqDreamAnalysis = faqData.filter((faq) => faq.category === 'dream-analysis')
const faqReferences = faqData.filter((faq) => faq.category === 'references')

// - SEO
const SEO = {
    title: 'AnalyzeMyDream | Perguntas Frequentes',
    description:
        'Encontre respostas para perguntas comuns sobre nossa plataforma.'
}
// - Page Header
const header = {
    title: 'Obtenha Respostas no <strong>AnalyzeMyDream.com</strong>',
    text: 'Encontre respostas para perguntas comuns sobre nossa plataforma.'
}
---

<Layout title={SEO.title} description={SEO.description}>
    <Hero title={header.title} text={header.text} />
    <FAQ
        title="Entendendo Nossa Ferramenta de Análise de Sonhos"
        text="Obtenha todos os detalhes sobre a ferramenta de análise de sonhos do AnalyzeMyDream. Conheça suas funcionalidades, como ela funciona e como pode ajudá-lo a obter insights sobre seus sonhos."
        data={faqDreamAnalysis}
    />
    <FAQ
        title="Fontes Bibliográficas e Referências"
        text="Descubra as fontes e referências que formam a base dos nossos artigos sobre análise de sonhos. Saiba mais sobre os livros e estudos que usamos para garantir interpretações precisas e confiáveis."
        data={faqReferences}
    />
    <CTA />
</Layout>
