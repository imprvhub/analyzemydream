// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import Price from '../components/blocks/pricing/PricingColumns.astro'
import Button from '../components/ui/Button.astro';
import FAQ from '../components/blocks/FAQ/Basic.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Content
// - SEO
const SEO = {
    title: 'AnalyzeMyDream | Planos de Subscrição',
    description: "Explore os diferentes planos de assinatura do AnalyzeMyDream: Básico, Padrão e Premium. Cada plano é projetado para atender às suas necessidades, com informações detalhadas sobre suas características, benefícios e descontos exclusivos."
}

// - Página Header
const header = {
    title: '<strong>Planos</strong> de Subscrição',
    text: 'Compare nossos planos de assinatura: Básico, Padrão e Premium, e escolha o que melhor se adapta às suas necessidades. Explore todas as funcionalidades, preços e ofertas disponíveis, incluindo os descontos para assinaturas anuais.'
}

// - Testimonial data
// import testimonialBackground from '../assets/testimonial-bg-02.webp'
