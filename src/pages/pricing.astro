---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import Price from '../components/blocks/pricing/PricingColumns.astro'
import Button from '../components/ui/Button.astro';
import FAQ from '../components/blocks/FAQ/Basic.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Content
// - SEO
const SEO = {
    title: 'AnalyzeMyDream | Pricing',
    description: "Discover the pricing plans for AnalyzeMyDream, including Basic, Standard, and Premium options. Find the perfect plan to suit your needs with detailed features and discounts."
}

// - Page Header
const header = {
    title: '<strong>Pricing</strong> Plans',
    text: 'Compare our Basic, Standard, and Premium plans to find the best option for your dream analysis needs. Explore features, pricing, and annual discounts.'
}
// - Testimonial data
// import testimonialBackground from '../assets/testimonial-bg-02.webp'
const testimonialData = {
	blockquote:
		"",
	figcaption: '',
	cite: ''
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<Price />

	<div class="trial-container">
		Enjoy a <strong>7-day free trial</strong> of the Basic Monthly Plan and explore all its features risk-free. You can cancel your subscription at any time, even after the trial period.
		<br><br>
	</div>
	<div style="text-align:center;">
		<Button size="lg" link="https://checkout.analyzemydream.com/trial">Start 7-Days Free Trial</Button>
	</div>
	
	<br><br>
	<br><br>
	<FAQ classes="bg-slate-50 dark:bg-neutral-900/40" />
	<CTA />
</Layout>
<style>
	.trial-container {
		padding-right: 1.5rem;
		padding-left: 1.5rem;
		text-align: center;
		margin: 0 auto;
		position: relative;
		font-weight: 600;
	}
</style>