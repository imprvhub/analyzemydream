---
// Componentes
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import ContactCards from '../components/blocks/contact/ContactCards.astro'
import SocialProof from '../components/blocks/socialproof/Basic.astro'

// Contenido
// - SEO
const SEO = {
	title: 'AnalyzeMyDream.com | Contáctanos',
	description:
		'¿Tienes preguntas o necesitas ayuda? Contacta a AnalyzeMyDream hoy para soporte, consultas o comentarios.'
}
// - Encabezado de Página
const header = {
  title: '¡Estamos Aquí para <strong>Ayudar!</strong>',
  text: "¿Tienes una pregunta, necesitas asistencia o deseas proporcionar feedback? Estamos aquí para escuchar y ayudarte. Contáctanos y responderemos lo antes posible."
};

---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
	<ContactCards classes="dark:bg-neutral-950/80" />
	<SocialProof classes="dark:bg-neutral-950/80" />
	<CTA />
</Layout>
