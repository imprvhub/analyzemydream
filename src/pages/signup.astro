---
import Layout from "../layouts/Layout.astro";
import { Icon } from 'astro-icon/components'
import Hero from '../components/blocks/hero/PageHeader.astro';

const userIsLoggedIn = !!Astro.locals.userId;

const SEO = {
    title: 'AnalyzeMyDream | Inscrever-se',
    description: 'Crie sua conta no AnalyzeMyDream e acesse uma experiência completa. Descubra os analisadores avançados e funcionalidades da nossa API para personalizar a análise dos seus sonhos.'
}

const header = {
    title: '<strong>Inscrever-se</strong>',
    text: 'Crie uma conta no AnalyzeMyDream para acessar ferramentas avançadas, incluindo analisadores e acesso completo à API. Personalize sua experiência para obter análises mais profundas e detalhadas dos seus sonhos.'
}

---

<Layout title={SEO.title} description={SEO.description}>
  <Hero title={header.title} text={header.text} />
  <br>
    <div class="flex items-center justify-center flex-col">
      <br>
      <div class="flex w-full flex-col items-center justify-center">
        <button class="auth-btn google-btn">
          <a href="/api/auth/google" class="auth-link">
            <Icon name="google-logo" class="h-6 w-6 mr-2" />
            Inscrever-se com Google
          </a>
        </button>
  
        <div class="my-2 text-center text-gray-500">ou</div>
        
        <button class="auth-btn github-btn">
          <a href="/api/auth/github" class="auth-link">
            <img src="/assets/github-mark.svg" class="auth-icon" alt="Logotipo do GitHub" />
            Inscrever-se com GitHub
          </a>
        </button>
  
        <p class="text-center my-5 text-gray-500">
          Já tem uma conta? <a href="/login" class="text-primary underline">Iniciar sessão</a>
        </p>
      </div>
    </div>
    <br>
  </Layout>
  
<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 20;
    width: 100%;
    background-color: white;
    display: flex;
    justify-content: space-between;
    padding: 1.25rem 3rem;
  }

  .header__logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.25rem;
    font-weight: bold;
    color: #333;
  }

  .header__menu {
    display: flex;
    gap: 1.25rem;
    align-items: center;
  }

  .header__menu-link {
    text-decoration: none;
    color: #333;
    transition: color 0.3s;
  }

  .header__menu-link:hover {
    color: #7BC7C7;
  }

  .auth-btn {
    display: block;
    width: 100%;
    background-color: #ffffff;
    color: #6b7280;
    border: 1px solid #e5e7eb;
    padding: 0.75rem;
    width: 220px;
    margin-bottom: 1rem;
    text-align: center;
    border-radius: 0.375rem;
    font-weight: 600;
    transition: background-color 0.3s, color 0.3s, border-color 0.3s;
  }

  .auth-btn:hover {
    background-color: #f9fafb;
    border-color: #d1d5db;
  }

  .auth-btn.google-btn {
    background-color: #ffffff;
  }

  .auth-btn.github-btn {
    background-color: #ffffff;
  }

  .auth-link {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: inherit;
    font-weight: bold;
  }

  .auth-icon {
    height: 1.5rem;
    width: 1.5rem;
    margin-right: 0.5rem;
  }

  .text-primary {
    color: #7BC7C7;
  }

  .text-gray-500 {
    color: #6b7280;
  }

  .underline {
    text-decoration: underline;
  }
</style>
