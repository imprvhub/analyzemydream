---
import Layout from "../layouts/Layout.astro";
import Hero from '../components/blocks/hero/PageHeader.astro';
import { Icon } from 'astro-icon/components'

const userIsLoggedIn = !!Astro.locals.userId;

const SEO = {
    title: 'AnalyzeMyDream | Iniciar sesión',
    description: 'Acceda a su cuenta en AnalyzeMyDream y desbloquee una gama completa de funcionalidades. Aproveche los poderosos analizadores y las capacidades avanzadas de nuestra API para una experiencia enriquecedora y personalizada.'
}

const header = {
    title: 'Iniciar <strong>sesión</strong>',
    text: 'Ingresa a tu cuenta de AnalyzeMyDream para acceder a herramientas exclusivas, como avanzados analyzers y la API completa. Mejora tu experiencia y adquiere una comprensión más profunda de tus sueños.'
}


---

<Layout title={SEO.title} description={SEO.description}>
  <Hero title={header.title} text={header.text} />
  <div class="flex items-center justify-center flex-col">
    <br>
    <div class="flex w-full flex-col items-center justify-center">
      <button class="auth-btn google-btn">
        <a href="/api/auth/google" class="auth-link">
          <Icon name="google-logo" class="h-6 w-6 mr-2" />
            Acceder con Google
        </a>
      </button>

      <div class="my-2 text-center text-gray-500">or</div>
      <button class="auth-btn github-btn">
        <a href="/api/auth/github" class="auth-link">
            <img src="/assets/github-mark.svg" class="auth-icon" alt="GitHub Logo" />
            Acceder con GitHub
        </a>
      </button>
    </div>
    <p class="text-center my-5 text-gray-500">
      ¿Aún no tiene una cuenta? <a href="/signup" class="text-primary underline">Comienza ahora</a>
    </p>
  </div>
  <br>
</Layout>

<style>
  .auth-btn {
      display: block;
      width: 100%;
      background-color: #ffffff;
      color: #6b7280;
      border: 1px solid #e5e7eb;
      padding: 0.75rem;
      width: 220px;
      margin-bottom: 1rem;
      text-align: center;
      border-radius: 0.375rem;
      font-weight: 600;
      transition: background-color 0.3s, color 0.3s, border-color 0.3s;
  }

  .auth-btn:hover {
      background-color: #f9fafb;
      border-color: #d1d5db;
  }

  .auth-btn.google-btn {
      background: #ffffff;
  }

  .auth-btn.github-btn {
      background: #ffffff;
  }

  .auth-link {
      display: flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      color: inherit;
      font-weight: bold;
  }

  .auth-icon {
      height: 1.5rem;
      width: 1.5rem;
      margin-right: 0.5rem;
  }

  .text-primary {
      color: #7BC7C7;
  }

  .text-gray-500 {
      color: #6b7280;
  }
</style>
