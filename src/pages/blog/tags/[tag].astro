---
// Página de Etiquetas del Blog
// ----------------------------
// Descripción: La página de etiquetas del blog.

// Componentes
// - Diseño
import Layout from '../../../layouts/Layout.astro'
// - UI
import Hero from '../../../components/blocks/hero/PageHeader.astro'
import BlogPosts from '../../../components/blocks/blog/BlogPosts.astro'

// Datos
import { getCollection } from 'astro:content'

export async function getStaticPaths() {
    const allPosts = await getCollection('blog')
    const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags || []).flat())]

    return uniqueTags.map((tag) => {
        if (typeof tag !== 'string') {
            throw new TypeError(`Se esperaba que la etiqueta fuera una cadena, pero se obtuvo ${typeof tag}`);
        }
        const filteredPosts = allPosts.filter((post) => 
            Array.isArray(post.data.tags) && post.data.tags.includes(tag)
        )
        return {
            params: { tag },
            props: { posts: filteredPosts }
        }
    })
}

const { tag } = Astro.params
const { posts } = Astro.props

if (typeof tag !== 'string') {
    throw new TypeError(`Se esperaba que la etiqueta fuera una cadena, pero se obtuvo ${typeof tag}`);
}

// Contenido
// - SEO
const SEO = {
    title: `AnalyzeMyDream | publicaciones etiquetadas como ` + tag,
    description:
        "Explora las últimas noticias de AnalyzeMyDream diseñadas para mejorar la productividad, asegurar una seguridad de primer nivel e integrarse sin problemas con tus herramientas favoritas. Únete a miles de usuarios satisfechos y transforma tu flujo de trabajo con AnalyzeMyDream hoy mismo."
}

// - Encabezado de Página
const header = {
  title: `Sueños sobre <br><strong>${tag}</strong>`,
  text: `Profundiza en los significados detrás de tus sueños sobre <strong>${tag}</strong>. Descubre los mensajes ocultos y el simbolismo que pueden estar influyendo en tu mente subconsciente. Explora Artículos Relacionados con Sueños de <strong>${tag}</strong>:`
};

---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<BlogPosts data={posts} />
</Layout>
