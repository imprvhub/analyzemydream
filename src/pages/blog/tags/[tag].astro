---
// Blog Tag Page
// ------------
// Description: The blog tag page.

// Components
// - Layout
import Layout from '../../../layouts/Layout.astro'
// - UI
import Hero from '../../../components/blocks/hero/PageHeader.astro'
import BlogPosts from '../../../components/blocks/blog/BlogPosts.astro'

// Data
import { getCollection } from 'astro:content'

export async function getStaticPaths() {
	const allPosts = await getCollection('blog')
	const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags || []).flat())]

	return uniqueTags.map((tag) => {
		if (typeof tag !== 'string') {
			throw new TypeError(`Expected tag to be a string, but got ${typeof tag}`);
		}
		const filteredPosts = allPosts.filter((post) => 
			Array.isArray(post.data.tags) && post.data.tags.includes(tag)  // Verifica si post.data.tags es un array
		)
		return {
			params: { tag },
			props: { posts: filteredPosts }
		}
	})
}

const { tag } = Astro.params
const { posts } = Astro.props

// Ensure tag is a string
if (typeof tag !== 'string') {
    throw new TypeError(`Expected tag to be a string, but got ${typeof tag}`);
}

// Content
// - SEO
const SEO = {
	title: `Dream Insights | posts tagged as ` + tag,
	description:
		"Explore Dream Insights's latest news designed to enhance productivity, ensure top-notch security, and integrate seamlessly with your favorite tools. Join thousands of satisfied users and transform your workflow with Dream Insights today!"
}

// - Page Header
const header = {
	title: `Dream Insights posts about <br><strong>` + tag + `</strong>`,
	text: `Stay informed, stay productive with all the latest from Dream Insights`
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<BlogPosts data={posts} />
</Layout>