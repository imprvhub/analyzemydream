---
// Página de Etiquetas do Blog
// ----------------------------
// Descrição: A página de etiquetas do blog.

// Componentes
// - Layout
import Layout from '../../../layouts/Layout.astro'
// - UI
import Hero from '../../../components/blocks/hero/PageHeader.astro'
import BlogPosts from '../../../components/blocks/blog/BlogPosts.astro'

// Dados
import { getCollection } from 'astro:content'

export async function getStaticPaths() {
    const allPosts = await getCollection('blog')
    const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags || []).flat())]

    return uniqueTags.map((tag) => {
        if (typeof tag !== 'string') {
            throw new TypeError(`Esperava-se que a etiqueta fosse uma string, mas obteve ${typeof tag}`);
        }
        const filteredPosts = allPosts.filter((post) => 
            Array.isArray(post.data.tags) && post.data.tags.includes(tag)
        )
        return {
            params: { tag },
            props: { posts: filteredPosts }
        }
    })
}

const { tag } = Astro.params
const { posts } = Astro.props

if (typeof tag !== 'string') {
    throw new TypeError(`Esperava-se que a etiqueta fosse uma string, mas obteve ${typeof tag}`);
}

// Conteúdo
// - SEO
const SEO = {
    title: `AnalyzeMyDream | Sonhos sobre ` + tag,
    description:
        "Descubra as mensagens ocultas e o simbolismo que podem estar influenciando sua mente subconsciente."
}

// - Cabeçalho da Página
const header = {
  title: `Sonhos sobre <br><strong>${tag}</strong>`,
  text: `Aprofunde-se nos significados por trás dos seus sonhos sobre <strong>${tag}</strong>. Descubra as mensagens ocultas e o simbolismo que podem estar influenciando sua mente subconsciente. Explore Artigos Relacionados com Sonhos de <strong>${tag}</strong>:`
};

---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<BlogPosts data={posts} />
</Layout>
