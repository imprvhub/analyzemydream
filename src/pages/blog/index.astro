---
// Página de Índice del Blog
// ------------
// Descripción: La página de índice del blog.

// Componentes
// - Layout
import Layout from '../../layouts/Layout.astro'
// - UI
import Hero from '../../components/blocks/hero/PageHeader.astro'
import BlogPosts from '../../components/blocks/blog/BlogPosts.astro'

// Datos
import { getCollection } from 'astro:content'

// Contenido
// - SEO
const SEO = {
	title: 'AnalyzeMyDream | Últimas noticias y actualizaciones de AnalyzeMyDream',
	description:
		"Explora las últimas noticias de AnalyzeMyDream diseñadas para mejorar la productividad, asegurar la mejor seguridad y integrarse a la perfección con tus herramientas favoritas. Únete a miles de usuarios satisfechos y transforma tu flujo de trabajo con AnalyzeMyDream hoy mismo."
}
// - Encabezado de Página
const header = {
	title: 'Explora todos los <strong>sueños</strong>.',
	text: 'Accede a interpretaciones basadas en investigaciones académicas. Descubre el verdadero significado detrás de tus sueños.'
}

const allPosts = await getCollection('blog')
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<BlogPosts data={allPosts} />
</Layout>
