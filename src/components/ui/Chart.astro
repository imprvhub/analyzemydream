---
export interface ApiKeyData {
  api_key: string;
  requests_made: number;
  requests_limit: number;
  renewal_date: string;
}

export interface Props {
  apiData: ApiKeyData[];
}

const { apiData } = Astro.props;

---

<div id="charts-container">
  {apiData.map(data => (
    <div class="chart">
      <div class="chart-header">
        <span class="api-key">{data.api_key}</span>
        <span class="renewal-date">Restablecimiento de cuota: {new Date(data.renewal_date).toLocaleDateString()}</span>
      </div>
      <div class="progress-bar">
        <div class="progress" style={`width: ${(data.requests_made / data.requests_limit) * 100}%`}></div>
      </div>
      <div class="usage-info">
        <span>Solicitudes: {data.requests_made} / {data.requests_limit}</span>
        <span>{((data.requests_made / data.requests_limit) * 100).toFixed(1)}% usado</span>
      </div>
    </div>
  ))}
</div>





    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 90%;
            margin: 0 auto;
            padding: 20px;
        }

        .chart {
            background-color: transparent;
            border-radius: 8px;
            max-width: 90%;
            margin: 0 auto;
            position: relative;
            padding: 20px;
            margin-bottom: 20px;
        }
        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }
        .api-key {
            font-weight: bold;
        }
        .renewal-date {
            color: #7f8c8d;
            font-size: 0.9em;
        }
        .progress-bar {
            background-color: #ecf0f1;
            border-radius: 4px;
            height: 20px;
            overflow: hidden;
        }
        .progress {
            background-color: #7BC7C7;
            height: 100%;
            transition: width 0.5s ease-in-out;
        }
        .usage-info {
            display: flex;
            justify-content: space-between;
            margin-top: 5px;
            font-size: 0.9em;
        }

        .charts-container {
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 0.3rem;
            margin: auto;
        }
    </style>




