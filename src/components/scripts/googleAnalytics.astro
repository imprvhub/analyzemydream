---
import { googleAnalyticsMeasurementID } from '../../../src/config/analytics.ts'
---

<!-- Google tag (gtag.js) -->
<script async src={`https://www.googletagmanager.com/gtag/js?id=${googleAnalyticsMeasurementID}`}></script>

<script type="text/partytown" data-ga-measurement-id={googleAnalyticsMeasurementID} id="ga-init">
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    window.dataLayer.push(arguments);
  }
  gtag('js', new Date());
  gtag('config', document.getElementById('ga-init')?.getAttribute('data-ga-measurement-id'));
</script>

